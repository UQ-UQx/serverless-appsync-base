{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "linterOptions": {
        "exclude": [
            "node_modules"
        ]
    },
    "rules": {
        "no-unused-variable": true,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "object-literal-sort-keys": false,
        "no-console": false,
        "max-classes-per-file": false,
        "no-any": false,
        "jsx-no-lambda": [
            false
        ],
        "no-empty-interface": [
            false
        ],
        "jsdoc-format": false,
        "prettier": [
            true,
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 2
            }
        ]
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}